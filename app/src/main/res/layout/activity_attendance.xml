<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maroon">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_gravity="start"
                android:background="@color/gold"
                android:src="@drawable/back"
                android:contentDescription="Menu Icon" />

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="Title"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:src="@drawable/circle_logo"
                android:contentDescription="Logo Icon" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:padding="20dp"
            android:orientation="vertical">

            <!-- Room Details Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/roomDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/subjectCodeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject Code"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sectionField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Section"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/startTimeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/endTimeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/locationField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/teacherField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Active Session Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sessionDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/activeSessionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Session"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timeInField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time In: --:--"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/locationTimeInField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: --"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/statusTimeInField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Not Started"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time Out & Feedback Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeOutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/timeOutField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Out: --:--"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/locationTimeOutField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: --"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/statusTimeOutField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Not Started"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/feedbackField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Feedback:"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/timeInButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Time In"
                    android:backgroundTint="@color/maroon"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/timeOutButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Time Out"
                    android:backgroundTint="@color/gold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
