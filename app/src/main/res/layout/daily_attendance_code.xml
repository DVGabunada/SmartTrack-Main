<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAILY CODES"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#A51D1D"
        android:gravity="center"
        android:paddingBottom="10dp" />

    <!-- QR Code Image -->
    <ImageView
        android:id="@+id/qrCodeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter" />

    <!-- Code Display -->
    <TextView
        android:id="@+id/codeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODE: ABCD-1234"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/yellow_rounded_bg"
        android:gravity="center"
        android:layout_marginVertical="10dp" />

    <!-- Time In / Time Out Toggle -->
    <RadioGroup
        android:id="@+id/timeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/yellow_rounded_bg">

        <RadioButton
            android:id="@+id/timeInButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_button_selector"
            android:text="TIME IN"
            android:textColor="@drawable/toggle_text_color"
            android:button="@null"
            android:padding="10dp"
            android:gravity="center"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/timeOutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_button_selector"
            android:text="TIME OUT"
            android:textColor="@drawable/toggle_text_color"
            android:button="@null"
            android:padding="10dp"
            android:gravity="center" />
    </RadioGroup>


</LinearLayout>
