<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/monthlyAttendanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Attendance Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/monthlySummaryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/monthlyAttendanceTitle"
        android:padding="8dp">

        <TextView
            android:id="@+id/presentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presents: 0"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lates: 0"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/absentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Absents: 0"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</RelativeLayout>
