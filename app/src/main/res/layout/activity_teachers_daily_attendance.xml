<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maroon"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teachers' Daily Attendance Logs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <!-- Empty Message (General) -->
    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No records found."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Rooms Label -->
    <TextView
        android:id="@+id/roomsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <!-- Room Buttons List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/roomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

    <!-- Events Label -->
    <TextView
        android:id="@+id/eventsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"/>

    <!-- Event Buttons List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/eventContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

    <TextView
        android:id="@+id/emptyEventsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No schedule for today."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/emptyRoomsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No schedule for today."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"/>



</LinearLayout>
